@model webplatform.Models.Forms.NewUser

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ny bruger</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-offset-4 col-md-3">
                
                @Html.Partial("_message")
                @Html.ValidationSummary()
                @using (Html.BeginForm("NewUser", "Login", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Brugernavn" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new {@class = "form-control", @placeholder = "Password"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.RepeatPassword)
                        @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control", @placeholder = "Password" })
                    </div>
                    <button type="submit" class="btn btn-default pull-right">Submit</button>
                }
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
