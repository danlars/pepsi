@model IEnumerable<webplatform.Models.Board>

@{
    Layout = null;
}
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th style="min-width: 130px;">
                Projekt navn
            </th>
            <th>
                Beskrivelse
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var board in Model)
        {
            <tr class="clickable-row" data-href="@Url.Action("Index", "Board", new {id = board.id})">
                <td>
                    @board.title
                </td>
                <td>
                    <a title="Rediger" href="@Url.Content("~/Form/Board/" + board.id)" data-fancybox-type="iframe" class="editing pull-right"></a>
                    @board.description
                </td>
            </tr>
        }
    </tbody>
</table>
